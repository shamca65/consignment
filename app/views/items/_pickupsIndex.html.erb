    };

    var getRowData = function(rowIndexes) {
      var rows = new Array();

      for (var i = 0; i < rowIndexes.length; i++) {
		    var rowID = $('#jqxgrid').jqxGrid('getrowid', rowIndexes[i]);
		    var datarow = generateRow(rowID);
		    //alert('datarow: ' + datarow["id"]);
        rows.push(datarow);
      }
	  };

		var generateRow = function (rowID) {

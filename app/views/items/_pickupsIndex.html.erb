			var data = leftGrid.jqxGrid('getrowdatabyid', rowID);
			//alert(data.id + " " + data.description + " " + data.size);
			var row = {};
			row["id"] = data.id;
			row["description"] = data.description;
			row["size"] = data.size;
			row["gender"] = data.gender;

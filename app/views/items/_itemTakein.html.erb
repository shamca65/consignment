<%= form_for @item, validate: true do |i| %>
<%= hidden_field_tag 'mode','takein'%>
<%= hidden_field_tag 'customer_id',params[:id]%>

    <div class="container">
        <%= i.text_field :customer_id, id:'itemCustomerID',autofocus: false,
        class: "form-control disabled readonly border-0 text-muted bg-light hidden", value:params[:id]%>
        <div class="card">
            <div class="card-header orange">
                <h5 class="mb-0 h3">New Item</h5>
            </div>
            <div class="card-body">
                <div class="card-text text-right">
                  <h4>Today: <%= simple_date(Date.today) %></h4>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <ul class="list-group">
                        <li class="list-group-item"><span>
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1"><h5>$</h5></span>
                                    <%= i.text_field :price, id:"itemPrice",
                                    autofocus: true, style: "width:150px !important",class: "form-control ", placeholder: "Price" %>
                            </div>
                        </span></li>
                        <li class="list-group-item"><span>Tax Exempt?
                          <%= i.select  :tax_exempt, options_for_select({ "No" => 0, "Yes" => 1 },0), {class: "browser-default md-select h4", id: "taxExempt"} %>
                        </span></li>
                        <li class="list-group-item"><span>Gender
                            <%= i.select  :gender, options_for_select(Item::ITEM_GENDERS.map {|v, k| [k, v]}),
                                {:include_blank => "Select Gender"},{class: "browser-default h4", id: "itemGender"} %>
                        </span></li>
                        <li class="list-group-item"><span>Type
                            <%= i.select :item_type, options_for_select(Item::ITEM_TYPES.map {|v, k| [k, v]}),
                                {:include_blank => "Select Type"},{class: "browser-default md-select h4", id: "itemType"} %>
                        </span></li>
                        <li class="list-group-item"><span>Size
                            <%= i.select  :size, options_for_select(Item::ITEM_SIZES.map {|v, k| [k, v]}),
                                {:include_blank => "Select Size"},{class: "browser-default md-select h4", id: "itemSize"} %>
                        </span></li>
                    </ul>
                </div>
                <div class="col">
                    <ul class="list-group">
                        <li class="list-group-item"><span>Item Description
                        <%= i.text_field :description, id: 'itemDescription',autofocus: true,class: "form-control", placeholder: "Description"%>
                        </span></li>
                        <li class="list-group-item"><span>
                          <%= i.text_area :item_note, id: 'itemNotes', rows: "10", class: 'form-control w-80', placeholder: "Private Notes" %>
                        </span></li>

                    </ul>
                </div>
            </div>
            <div class="row text-center">
              <div class="col">

              </span></li>
            </div>
          </div>
            <div class="row text-right" style="height: 4em; margin-top: .5em;">
              <div class="col">
                <button class="btn btn-primary waves-effect" type="submit">Add Item Record</button>
                <%=link_to 'Cancel', items_customers_path, class:" text-right btn btn-outline-primary btn-rounded waves-effect" %>
            </div>
            </div>
        </div>
    </div>
<% end %>
<h2>Editing Item</h2>
<%= form_with(model: item, local: true) do |form| %>

  <div class="form-icon"><span><i class="icon-user icon"></i></span></div>
  <div class="registration-form">

    <div class="field">
      <%= form.label :customer %><br>
      <%= select_tag "customer_id", options_from_collection_for_select(Customer.all, "id", "full_name"), selected: :option %>
    </div>

    <div class="form-group">
      <%= form.text_field :decsription, class: "form-control item", type: "text", placeholder: "Description" %>
    </div>

    <div class="form-group">
      <%= form.text_field :size, class: "form-control item", type: "text", placeholder: "Size" %>
    </div>

    <div class="form-group">
      <%= form.number_field :price, id: "currency", class: "form-control item", type: "currency", placeholder: "Price" %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>

  </div>

<%end %>
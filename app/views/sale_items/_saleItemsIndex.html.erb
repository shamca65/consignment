<div class="row">
  <div class="col">
    <table id="leftSaleItemsTable" class="table table-striped table-sm  table-bordered" cellspacing="0">
      <thead>
      <tr>
        <th class="text-center h5">
        </th>
        <th class="text-center h5">
          <b>Item ID</b>
        </th>
        <th class="text-left no-sort h5">
          <b>Description</b>
        </th>
        <th class="text-center no-sort h5">
          <b>Size</b>
        </th>
        <th class="text-center no-sort h5">
          <b>Price</b>
        </th>
      </tr>
      </thead>
    <tbody>
    <% @sale_items.each do |item| %>
      <tr >
        <td class="text-center h5 align-middle" ></td>
        <td class="text-center h5 align-middle" ><%= item.id.to_s %></td>
        <td class="text-left h5 align-middle" ><%= item.description %></td>
        <td class="text-center align-middle" ><%= size_label(item.size) %></td>
        <td class="text-center h5 align-middle" ><%= number_to_currency item.price %></td>
      </tr>
    <% end %>
    </tbody>
    </table>
  </div>
  <div class="col" style="width: 75px;max-width: 104px;"></div>
  <div class="col">
    <table id="rightSaleItemsTable" class="table table-striped table-bordered" cellspacing="0">
      <thead>
      <tr>
        <th class="text-center h5">
          <b>Select</b>
        </th>
        <th class="text-center h5">
          <b>Item ID</b>
        </th>
        <th class="text-left no-sort h5">
          <b>Description</b>
        </th>
        <th class="text-center no-sort h5">
          <b>Size</b>
        </th>
        <th class="text-center h5">
          <b>price</b>
        </th>
      </tr>
      </thead>
    <tbody>
    <tr >
      <td class="text-center h4 align-middle" ></td>
      <td class="text-center h5 align-middle" ></td>
      <td class="text-left h5 align-middle" ></td>
      <td class="text-left h5 align-middle" ></td>
      <td class="text-center h5 align-middle" ></td>
    </tr>
    </tbody>
    </table>
  </div>
</div>
<div class="col">
  <footer class="page-footer text-center font-small mt-4 wow fadeIn">
    <div class="col-lg-5">
      <button class="btn btn-outline-primary" id="btnAddToSale">Add to Sale>></button>
    </div>
    <div class="col-lg-2" >
    </div>
    <div class="col-lg-5">
      <div class="pull-left">
        <button class="btn btn-outline-primary pull-left" id="btnCommit">Commit Changes</button>
      </div>
    </div>
  </footer>
</div>
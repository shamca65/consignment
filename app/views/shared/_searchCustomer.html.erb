<div class="table-responsive">
<table class="table">
  <tr>
    <td class="text-right align-middle">
      <%= form_for :search_customers, url: search_results_customers_path, method: :get do |form| %>
        <%= form.text_field :query, value: params[:search_customers].presence && params[:search_customers][:query] %>
        <%= form.submit 'Search Customers', class: 'btn btn-primary'%>
      <% end %>
    </td>
  </tr>
</table>
</div>

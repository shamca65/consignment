<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Overtime App Alert", :image => image_path('info.png'), sticky: false) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "Overtime App Error", :image => image_path('prohibition.png'), sticky: false) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: "Overtime App Notification", sticky: false) %>
<% end %>>
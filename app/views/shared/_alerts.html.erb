<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Notice", :image => image_path('info.png'), sticky: false) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "Notice", :image => image_path('prohibition.png'), sticky: false) %>
<% elsif flash[:success] %>
  <%= js add_gritter(flash[:success], title: "Notice", :image => image_path('checked.png'), sticky: false) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: "Notice", :image => image_path('info.png'), sticky: false) %>
<% end %>>
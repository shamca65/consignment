    <div class="col-md-6">
      <!-- Material input -->
      <div class="md-form form-group">

      </div>
    </div>
  </div>
  <!-- Grid column -->

  <div class="col-md-6">
    <!-- Material input -->
    <div class="md-form form-group">
      <%= f.submit "Save New Customer", class: "btn btn-outline-primary btn-rounded waves-effect" %>
    </div>
  </div>
  <!-- Grid column -->
  </div>

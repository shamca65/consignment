<tbody>
<% @customers.each do |customer| %>
  <tr >
    <td class="text-center" ><%= customer.id %></td>
    <td class="text-left"><%= customer.full_name %></td>
    <td class="text-center"><%= ag_status_label(customer.agreement_status) %></td>
    <td class="text-left"><%= customer.phone.truncate(15) %></td>
    <td class="text-center"><%= customer.email %></td>
    <td class="text-center"><%= customer.province %></td>
    <td style="text-align: center">
      <%= link_to ' ', items_customers_path(customer.id), class: 'fal fa-list-alt h3 text-primary' %>
    </td>
    <td style="text-align: center">
      <%= link_to ' ', edit_customer_path(customer.id), class: 'fas fa-user-edit h3 text-secondary' %>
    </td>
  </tr>
<% end %>
</tbody>
</table
<% @customerItems.each do |item| %>
  <tr>

    <td><%= item.id %></td>
    <td><%= item.description %></td>
    <td><%= item.size %></td>
    <td><%= number_to_currency(item.price)%></td>
    <td><%= link_to 'Edit', edit_item_path(item), class: "btn btn-sm btn-primary" %></td>
    <td><%= link_to 'Delete', item, method: :delete, class: "btn btn-sm btn-danger", data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>




</tbody>
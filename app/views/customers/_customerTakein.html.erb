<%= form_for @customer do |customer| %>
  <%= customer.fields_for @item do |item| %>
  <div class="row d-flex justify-content-center" >
    <div class="card rounded-sm" style="width: 70%;">
      <div class="card-header">
        Take In Items
      </div>
        <div class="card-body">
          <h5 class="card-title">Special title treatment</h5>

          <div class="row d-flex justify-content-center">
          
          <%-# left column -%>
          <div class="col-4-lg">
            <div class="card bg-light mb-3 rounded-sm" style="max-width: 20rem;">
              <div class="card-header h4">Item Details</div>
                <div class="card-body">
                  <%= item.select  :gender, options_for_select(Item::ITEM_GENDERS.map {|v, k| [k, v]}),
                    {:include_blank => "Select Gender"},{class: "browser-default"} %>
                </div>
                <div class="card-body">
                  <%= item.select :item_type, options_for_select(Item::ITEM_TYPES.map {|v, k| [k, v]}),
                    {:include_blank => "Select Item Type"},{class: "browser-default md-select"} %>
                </div>
                <div class="card-body">
                  <%= item.select  :size, options_for_select(Item::ITEM_SIZES.map {|v, k| [k, v]}),
                        {:include_blank => "Select Item Size"},{class: "browser-default md-select"} %>
                </div>
              </div>
          </div>


          <%-# right column -%>
          <div class="col-4-lg">
            <div class="card bg-light mb-3 rounded-sm" style="max-width: 20rem;">
              <div class="card-header h4">Item Details</div>
                <div class="card-body">
                  <%= item.text_field :price, id: "itemPrice",
                    autofocus: true, autocomplete: "itemPrice",style: "width:150px !important",
                    class: "form-control ", placeholder: "Price" %>
                <label class="active">Price</label>
                </div>
                <div class="card-body">
                <%= item.text_field :description, id: 'itemDescription',
                                          autofocus: true, autocomplete: "itemDescription",
                                          class: "form-control", placeholder: "Description"%>
                <label class="active">Enter a Short Description</label>
                </div>
                <div class="card-body">
                  <%= item.text_area :item_note, class: 'form-control',
                    cols: "10", rows: "5", placeholder: "Private Item Notes" %>
                  <label class="active">Private Item Notes</label>                 
                </div>
              </div>
          </div>
          <div class="col-2-lg">
          <div class="card-body">
            <div class="text-center">
              <button class="btn btn-outline-green">Save & Next >><i class="fas fas fa-plus pl-1"></i></button>
            </div>
            </div>
          </div>

        <%#row%>
      </div>

      </div>
      <div class="card-footer text-muted">
        2 days ago
      </div>
    </div>
    </div>
  <% end %>
<% end %>

<%= form_with model: @customer, url: customer do |f| %>
  <!-- Grid row -->
  <!-- Material form register -->
  <div class="d-flex justify-content-center">
  <div class="card w-50 mb-3" >

    <h2 class="card-header secondary-color white-text text-center py-4">
      <strong>Update Customer</strong>
    </h2>

    <!--Card content-->
    <div class="card-body px-lg-5 pt-0">
  <br />
  <div class="form-row">
    <!-- Grid column -->
    <div class="col-md-6 ">
      <!-- Material input -->

      <div class="md-form form-group ">
        <%= f.text_field :first_name, id: 'inputfirstName4MD', 
                         autofocus: true, autocomplete: "first_name",
                         class: "form-control", placeholder: "First Name",
                          style: "font-size: medium" %>
      </div>
    </div>
    <!-- Grid column -->

    <!-- Grid column -->
    <div class="col-md-6">
      <!-- Material input -->
      <div class="md-form form-group">
        <%= f.text_field :last_name, id: 'inputlastName4MD',
                         autofocus: true, autocomplete: "last_name",
                         class: "form-control", placeholder: "Last Name",
                         style: "font-size: medium" %>
      </div>
    </div>
    <!-- Grid column -->
  </div>
   <!-- Row 2 -->
  <div class="form-row">
    <!-- Grid column -->
    <div class="col-md-6">
      <!-- Material input -->
      <div class="md-form form-group">
        <%= f.text_field :phone, id: 'inputPhone4MD',
                         autofocus: true, autocomplete: "phone",
                         class: "form-control", placeholder: "Phone or Mobile",
                         style: "font-size: medium" %>
      </div>
    </div>
    <!-- Grid column -->

    <!-- Grid column -->
    <div class="col-md-6">
      <!-- Material input -->
      <div class="md-form form-group">
        <%= f.text_field :email, id: 'inputEmail4MD',
                         autofocus: true, autocomplete: "email",
                         class: "form-control", placeholder: "Email Address",
                         style: "font-size: medium" %>
      </div>
    </div>
    <!-- Grid column -->
  </div>

  <!-- Grid row -->
  <div class="row">
    <!-- Grid column -->
    <div class="col-md-12">
      <!-- Material input -->
      <div class="md-form form-group">
        <%= f.text_field :street_address, id: "inputAddressMD",
                         autofocus: true, autocomplete: "street_address",
                         class: "form-control", placeholder: "Street Address",
                         style: "font-size: medium" %>
      </div>
    </div>
    <!-- Grid column -->
    <div class="col-md-12">
      <!-- Material input -->
      <div class="md-form form-group">
        <%= f.text_field :street_address2, id: "inputAddress2MD",
                         autofocus: true, autocomplete: "street_address2",
                         class: "form-control", placeholder: "Street Address 2",
                         style: "font-size: medium" %>
      </div>
    </div>
    <!-- Grid column -->
  </div>

  <!-- Grid row -->
  <div class="form-row">
    <!-- Grid column -->
    <div class="col-md-6">
      <!-- Material input -->
      <div class="md-form form-group">
        <%= f.text_field :city, id: "inputCityMD",
                         autofocus: true, autocomplete: "city",
                         class: "form-control", placeholder: "City",
                         style: "font-size: medium" %>
      </div>
    </div>

    <!-- Grid column -->
    <div class="col-md-6">
      <!-- Material input -->
      <div class="md-form form-group">
        <%= f.text_field :postal, id: "inputPostalMD",
                         autofocus: true, autocomplete: "postal",
                         class: "form-control", placeholder: "Postal",
                         style: "font-size: medium" %>
      </div>
    </div>
    <!-- Grid column -->
  </div>

  <!-- Grid row -->
  <div class="form-row">
    <!-- Grid column -->
    <div class="col-md-6" >
        <%= label_tag(:province, "Province:") %>
        <%= f.select  :province, options_for_select(Customer::PROVINCES.map {|k,v| [v,k]},@customer.province),{},{class: "fstdropdown-select"} %>
    </div>

    <div class="col-md-6" >
        <%= label_tag(:agreement_status, "Agreement Status:") %>
          <%= f.select  :agreement_status,
                        options_for_select([["Unsigned","0"], ["Signed","1"], ["Under Review","2"]], @customer.agreement_status),{},{class: "fstdropdown-select", id:"custAS", "data-searchdisable":true} %>
      </div>
    <!-- row  -->
  </div>
  <!-- Grid column -->
<br>
  <!-- row 6  -->
  <div class="form-row" >
    <div class="col-md-12 text-center">
      <div class="form-group red-border well shadow-textarea">
          <div class="protip" data-pt-title="Private Notes"
                data-pt-position="top-left"
                data-pt-scheme="aqua">
          <%= f.text_area :notes, class: 'form-control',
                            cols: "10", rows: "5", placeholder: "Enter Customer notes" %>
        </div>
      </div>
    </div>
  </div>
  <!-- end of form -->
  <div class="text-center">
    <button class="btn btn-primary waves-effect" type="submit" >Update Customer Record</button>
  </div>
  <% end %>
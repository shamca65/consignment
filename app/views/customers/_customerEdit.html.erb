<%= form_with(model: customer, local: true) do |form| %>

  <div class="form-icon"><span><i class="icon-user icon"></i></span></div>
  <div class="registration-form">

    <div class="form-group">
      <%= form.text_field :first_name, class: "form-control item", type: "text", placeholder: "First Name" %>
    </div>

    <div class="form-group">
      <%= form.text_field :last_name, class: "form-control item", type: "text", placeholder: "Last Name" %>
    </div>

    <div class="form-group">
      <%= form.text_field :email, id: "email", class: "form-control item", type: "email", placeholder: "Email Address" %>
    </div>

    <div class="form-group">
      <%= form.text_field :phone, id: "phone-number", class: "form-control item", type: "phone", placeholder: "Phone" %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>

  </div>

<%end %>